<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingAreaActivity">

    <Button
        android:id="@+id/btnToTrain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treenaa!"
        app:layout_constraintEnd_toEndOf="@+id/layoutForChecks2"
        app:layout_constraintStart_toStartOf="@+id/layoutForChecks2"
        app:layout_constraintTop_toBottomOf="@+id/layoutForChecks2" />

    <TextView
        android:id="@+id/txtTrainHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:scrollbars="vertical"
        android:text="Valitse treenattava taistelija:"
        android:textColor="#232323"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutForChecks2"
        android:layout_width="226dp"
        android:layout_height="129dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTrainHeadline"></LinearLayout>

    <TextView
        android:id="@+id/txtTrainInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#2E2E2E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnToTrain" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginTop="5dp"
    android:background="#7BCCC5"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="110dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp"
        android:textAlignment="center"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7BCCC5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nimi ja (Väri)"
            android:textColor="#121212"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hyökkäys"
            android:textColor="#1B1B1B" />

        <TextView
            android:id="@+id/txtDefense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puolustus"
            android:textColor="#121212" />

        <TextView
            android:id="@+id/txtLife"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Life"
            android:textColor="#121212" />

        <TextView
            android:id="@+id/txtExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kokemus"
            android:textColor="#121212" />

        <TextView
            android:id="@+id/txtLosedFights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hävityt taistelut"
            android:textColor="#A80000" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>